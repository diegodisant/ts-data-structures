{
  "env": {
    "node": true,
    "browser": false,
    "es2021": true
  },
  "ignorePatterns": [
    "/node_modules",
    "/build"
  ],
  "extends": [
    "airbnb-base"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": [
    "@typescript-eslint"
  ],
  "rules": {
  },
  "overrides": [
    {
      "files": ["src/**/*.ts"],
      "rules": {
        "no-use-before-define": "off",
        "import/extensions": "off",
        "import/no-unresolved": "off",
        "no-unused-vars": "off",
        "semi": "off",
        "no-console": "off",
        "class-methods-use-this": "off",
        "brace-style": "off",
        "indent": "off"
      }
    },
    {
      "files": ["test/**/*.spec.ts"],
      "rules": {
        "import/extensions": "off",
        "import/no-unresolved": "off",
        "no-undef": "off"
      }
    }
  ]
}
